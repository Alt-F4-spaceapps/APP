---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Sensor_humedad from "../assets/sensor_humedad.jpeg";
import Health from "../assets/plant_health.png";
import Water from '../assets/Water.png';
import Soil from '../assets/Soil.png';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<html lang={lang} dir="ltr" prefix="og: https://ogp.me/ns#">
	<body class="bg-white">
        <p class="text-4xl font-bold text-center mt-24">{t('sensor-text-7')}</p>

        <div class="flex mt-16 justify-center mx-8"> <!-- Contenedor flex con márgenes laterales -->
            <p class="mr-12 text-2xl text-center">{t('sensor-text-6')}<br>{t('sensor-text-6-2')}</p>
            <img src={Sensor_humedad.src} alt="Cad del Dron" class="w-[600px] h-auto"> <!-- Ancho de la imagen -->
        </div>
        <p class="text-left ml-40 text-4xl mt-10">Track:</p>
        <div class="flex justify-center mt-16 space-x-7"> <!-- Centrar y espaciar las cajas -->
            <div class="bg-white p-4 w-64 border border-gray-300 rounded-2xl flex flex-col items-center"> <!-- Caja 1 -->
                <img src={Water.src} alt="Cad del Dron" class="w-24 h-auto mb-2"> <!-- Imagen más pequeña -->
                <p class="text-lg text-center font-bold">{t('sensor-text')}</p>
                <p class="text-lg text-center">{t('sensor-text-1')}</p>
            </div>
            <div class="bg-white p-4 w-64 border border-gray-300 rounded-2xl flex flex-col items-center"> <!-- Caja 2 -->
                <img src={Soil.src} alt="Cad del Dron" class="w-24 h-auto mb-2"> <!-- Imagen más pequeña -->
                <p class="text-lg text-center font-bold">{t('sensor-text-2')}</p>
                <p class="text-lg text-center">{t('sensor-text-3')}</p>
            </div>
            <div class="bg-white p-4 w-64 border border-gray-300 rounded-2xl flex flex-col items-center"> <!-- Caja 3 -->
                <img src={Health.src} alt="Cad del Dron" class="w-24 h-auto mb-2"> <!-- Imagen más pequeña -->
                <p class="text-lg text-center font-bold">{t('sensor-text-4')}</p>
                <p class="text-lg text-center">{t('sensor-text-5')}</p>
            </div>
        </div>
	</body>
</html>