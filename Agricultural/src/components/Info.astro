---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Engrane_main from '../assets/Logo.png';
import Water from '../assets/Water.png';
import Pest from '../assets/Pest.png';
import Soil from '../assets/Soil.png';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<body class="bg-white">
    <section class="flex flex-col items-center">
        <!-- Imagen de Water encima -->
        <div class="flex flex-col items-center mb-4">
            <img src={Water.src} alt="Water" class="w-32 h-auto" />
            <p class="mt-10 text-black text-4xl">{t('info-water')}</p>
        </div>

        <!-- SecciÃ³n de Pest, Engrane y Soil -->
        <div class="flex justify-between items-start w-full max-w-4xl">
            <!-- Imagen de Pest a la izquierda -->
            <div class="flex flex-col items-center">
                <img src={Pest.src} alt="Pest" class="w-32 h-auto" />
                <p class="mt-10 text-black text-4xl">{t('info-pest')}</p>
            </div>

            <!-- Imagen de Engrane en el centro -->
            <div class="flex flex-col items-center">
                <img src={Engrane_main.src} alt="Engrane" class="w-[320px] h-auto" />
                <a href={`/${lang}/Local#dron`}>
                    <button class="mt-10 px-[35px] py-5 bg-[#4AB447] text-white rounded-full">{t('info-analysis')}</button>
                </a>
            </div>

            <!-- Imagen de Soil a la derecha -->
            <div class="flex flex-col items-center">
                <img src={Soil.src} alt="Soil" class="w-32 h-auto" />
                <p class="mt-10 text-black text-4xl">{t('info-soil')}</p>
            </div>
        </div>
    </section>
</body>
