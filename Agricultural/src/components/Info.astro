---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Engrane_main from '../assets/Logo.png';
import Water from '../assets/Water.png';
import Pest from '../assets/Pest.png';
import Soil from '../assets/Soil.png';
import Plant from '../assets/CropsHOME.png';
import Drone from '../assets/DroneHOME.png';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<body class="bg-white">
    <section class="flex flex-col items-center">
        <div class="flex items-center justify-between w-full">
            <!-- Imagen del Dron a la izquierda, en grande -->
            <div class="flex-shrink-0">
                <img src={Drone.src} alt="Dron" class="w-[300px] h-auto transform -rotate-6" />
            </div>
            
            <div class="flex-grow">
                <div class="grid grid-cols-2 gap-0 mb-10"> <!-- Eliminación del espacio entre las imágenes -->
                    <!-- Sección de Pest Control -->
                    <div class="flex flex-col items-center">
                        <img src={Pest.src} alt="Pest Control" class="w-24 h-auto" /> <!-- Reducir el tamaño de la imagen -->
                        <p class="mt-0 text-black text-lg">{t('info-pest')}</p> <!-- Ajustar el tamaño del texto -->
                    </div>
                    
                    <!-- Sección de Humidity Measure (Water) -->
                    <div class="flex flex-col items-center">
                        <img src={Water.src} alt="Humidity Measure" class="w-24 h-auto" /> <!-- Reducir el tamaño de la imagen -->
                        <p class="mt-0 text-black text-lg">{t('info-water')}</p> <!-- Ajustar el tamaño del texto -->
                    </div>
                    
                    <!-- Sección de Soil Fertility -->
                    <div class="flex flex-col items-center">
                        <img src={Soil.src} alt="Soil Fertility" class="w-24 h-auto" /> <!-- Reducir el tamaño de la imagen -->
                        <p class="mt-0 text-black text-lg">{t('info-soil')}</p> <!-- Ajustar el tamaño del texto -->
                    </div>
                    
                    <!-- Sección de Humidity Measure (con borde) -->
                    <div class="flex flex-col items-center">
                        <img src={Plant.src} alt="Humidity Measure" class="w-24 h-auto" /> <!-- Reducir el tamaño de la imagen -->
                        <p class="mt-0 text-black text-lg">{t('info-maiz')}</p> <!-- Ajustar el tamaño del texto -->
                    </div>
                </div>
            </div>            
        </div>

        <!-- Botón con logo encima, centrado en la parte inferior -->
        <div class="relative flex items-center justify-center">
            <!-- Imagen sobre el botón, pero con pointer-events para que no bloquee el botón -->
            <img src={Engrane_main.src} alt="Engrane" class="absolute left-[-30px] w-[120px] h-auto -top-6 pointer-events-none" />
        
            <!-- Botón centrado con z-index mayor -->
            <button class="pl-[89px] pr-6 py-5 bg-[#4AB447] text-white rounded-full text-lg flex items-center">
                <a href={`/${lang}/Local#dron`} class="relative z-10">
                    {t('info-analysis')}
                </a>
            </button>
        </div>                   
    </section>
</body>
