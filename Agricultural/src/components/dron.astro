---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import DronCad from "../assets/DronCad.png";
import Cam from "../assets/monitor.png";
import Health from "../assets/plant_health.png";
import Sync from "../assets/sync.png";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<html lang={lang} dir="ltr" prefix="og: https://ogp.me/ns#">
	<body class="flex flex-col items-center"> <!-- Asegúrate de que el cuerpo esté centrado -->
        <section id="dron">
            <p class="text-6xl text-center font-bold">{t('dron-text')}</p> <!-- Título -->
        
            <div class="flex mt-16 justify-center"> <!-- Asegúrate de que esto esté centrado -->
                <a href="/onshape">
                    <img src={DronCad.src} alt="Cad del Dron" class="w-[2100px] h-auto ml-28"> <!-- Ancho de la imagen -->
                </a>
                <p class="ml-52 text-2xl text-center">{t('dron-text-7')}</p> <!-- Texto -->
            </div>
        </section>
        
        <p class="text-left ml-40 text-4xl mt-10">Track:</p>
        
        <div class="flex justify-center mt-16 space-x-7"> <!-- Centrar y espaciar las cajas -->
            <div class="bg-white p-4 w-64 border border-gray-300 rounded-2xl flex flex-col items-center"> <!-- Caja 1 -->
                <img src={Cam.src} alt="Cad del Dron" class="w-24 h-auto mb-2"> <!-- Imagen más pequeña -->
                <p class="text-lg text-center font-bold">{t('dron-text-1')}</p>
                <p class="text-lg text-center">{t('dron-text-2')}</p>
            </div>
            <div class="bg-white p-4 w-64 border border-gray-300 rounded-2xl flex flex-col items-center"> <!-- Caja 2 -->
                <img src={Health.src} alt="Cad del Dron" class="w-24 h-auto mb-2"> <!-- Imagen más pequeña -->
                <p class="text-lg text-center font-bold">{t('dron-text-3')}</p>
                <p class="text-lg text-center">{t('dron-text-4')}</p>
            </div>
            <div class="bg-white p-4 w-64 border border-gray-300 rounded-2xl flex flex-col items-center"> <!-- Caja 3 -->
                <img src={Sync.src} alt="Cad del Dron" class="w-24 h-auto mb-2"> <!-- Imagen más pequeña -->
                <p class="text-lg text-center font-bold">{t('dron-text-5')}</p>
                <p class="text-lg text-center">{t('dron-text-6')}</p>
            </div>
        </div>
	</body>
</html>
